<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notepadlocker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotepadLocker">
        <activity android:name=".ForgetPasswordActivity"></activity>
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NoteEditor" />
        <activity
            android:name=".NotepadActivity"
            android:theme="@style/WelcomePage" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/RegisterColor" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/LoginColor" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>